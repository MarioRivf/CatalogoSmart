<%= form_with(model: producto, class: "space-y-6 max-w-xl mx-auto mt-10") do |form| %>
  <% if producto.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-700 px-4 py-3 rounded-lg shadow-sm">
      <h2 class="font-semibold text-lg mb-2">
        <%= pluralize(producto.errors.count, "error") %> impidieron guardar el producto:
      </h2>
      <ul class="list-disc ml-6 text-sm">
        <% producto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Campo: Nombre %>
  <div>
    <%= form.label :nombre, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :nombre, class: [
      "block w-full rounded-md shadow-sm border px-3 py-2 focus:ring-2 focus:ring-offset-1",
      producto.errors[:nombre].any? ? "border-red-500 focus:ring-red-400" : "border-gray-300 focus:ring-blue-400"
    ] %>
  </div>

  <%# Campo: Descripción %>
  <div>
    <%= form.label :descripcion, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :descripcion, class: [
      "block w-full rounded-md shadow-sm border px-3 py-2 focus:ring-2 focus:ring-offset-1",
      producto.errors[:descripcion].any? ? "border-red-500 focus:ring-red-400" : "border-gray-300 focus:ring-blue-400"
    ] %>
  </div>

  <%# Campo: Precio %>
  <div>
    <%= form.label :precio, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :precio, step: "0.01", class: [
      "block w-full rounded-md shadow-sm border px-3 py-2 focus:ring-2 focus:ring-offset-1",
      producto.errors[:precio].any? ? "border-red-500 focus:ring-red-400" : "border-gray-300 focus:ring-blue-400"
    ] %>
  </div>

  <%# Campo: Foto %>
  <div>
    <%= form.label :foto, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.file_field :foto, class: "block w-full border border-gray-300 rounded-md shadow-sm px-3 py-2 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:bg-blue-500 file:text-white hover:file:bg-blue-600" %>
  </div>

  <%# Botón de envío %>
  <div class="pt-4">
    <%= form.submit "Guardar", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-md shadow transition-all" %>
  </div>
<% end %>
