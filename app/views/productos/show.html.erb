<% content_for :title, "Detalles del Producto" %>

<div class="max-w-4xl mx-auto px-6 py-8">
  <% if notice.present? %>
    <div class="mb-6">
      <p id="notice" class="bg-green-100 text-green-700 px-4 py-3 rounded-md shadow-sm font-medium">
        <%= notice %>
      </p>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row sm:justify-between items-center mb-8 gap-6">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-800">Detalles del Producto</h1>
  </div>

  <div class="bg-white shadow-sm rounded-lg p-6 border border-gray-200">
    <div class="flex flex-col sm:flex-row sm:items-center gap-6">
      <% if @producto.foto.attached? %>
        <%= image_tag @producto.foto, class: "w-48 h-48 object-cover rounded-lg border border-gray-300" %>
      <% else %>
        <div class="w-48 h-48 flex items-center justify-center bg-gray-200 text-gray-400 rounded-lg border border-gray-300 text-sm">
          Sin foto
        </div>
      <% end %>

      <div class="flex-1">
        <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= @producto.nombre %></h2>
        <p class="text-sm text-gray-600 mb-3"><%= @producto.descripcion %></p>
        <p class="text-lg text-blue-600 font-bold mb-4">$<%= number_to_currency(@producto.precio, unit: "", delimiter: ".", separator: ",") %></p>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 mt-6 sm:gap-6">
      <%= link_to "Editar este producto", edit_producto_path(@producto), class: "inline-block px-6 py-2.5 bg-blue-600 hover:bg-blue-500 text-white rounded-md font-medium transition-all" %>
      <%= link_to "Volver a productos", productos_path, class: "inline-block px-6 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-800 rounded-md font-medium transition-all" %>
      <%= button_to "Eliminar este producto", @producto, method: :delete, data: { turbo_confirm: "¿Estás seguro?" }, class: "inline-block px-6 py-2.5 bg-red-600 hover:bg-red-500 text-white rounded-md font-medium transition-all" %>
    </div>
  </div>
</div>
